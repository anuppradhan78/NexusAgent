# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Postman API Configuration
POSTMAN_API_KEY=your_postman_api_key_here

# MCP Server Configuration
MCP_SERVER_CONFIG={"anthropic": "npx -y @anthropic-ai/mcp-server-anthropic", "postman": "npx -y @postman/mcp-server"}

# Alert Configuration
ALERT_CHANNELS=console
# Options: console, file:/path/to/alerts.log, webhook:https://your-webhook-url

# Report Configuration
REPORT_OUTPUT_DIR=./reports

# Learning Configuration
LEARNING_RATE=0.1
CONFIDENCE_THRESHOLD_INITIAL=0.5

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
